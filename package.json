{
  "name": "diff-arrows",
  "displayName": "Diff Arrows",
  "description": "Show the next/previous change to your git repository.",
  "version": "1.0.0",
  "publisher": "devhl",
  "repository": {
    "type": "git",
    "url": "https://github.com/devhl-labs/vscode-diff-arrows"
  },
  "icon": "docs/diff-arrows_128.png",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./target/index.js",
  "contributes": {
    "configuration": {
      "title": "Diff Arrows",
      "properties": {
        "diff-arrows.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show diff arrows in the editor toolbar."
        }
      }
    },
    "commands": [
      {
        "command": "diff-arrows.previous",
        "title": "Previous Change (Shift+Alt+F5)",
        "icon": "$(diff-editor-previous-change)"
      },
      {
        "command": "diff-arrows.next",
        "title": "Next Change (Shift+F5)",
        "icon": "$(diff-editor-next-change)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "diff-arrows.previous",
          "group": "navigation@-202304161",
          "when": "config.diff-arrows.enabled && !isInDiffEditor && gitOpenRepositoryCount >= 1 && !activeEditorIsReadonly"
        },
        {
          "command": "diff-arrows.next",
          "group": "navigation@-2202304162",
          "when": "config.diff-arrows.enabled && !isInDiffEditor && gitOpenRepositoryCount >= 1 && !activeEditorIsReadonly"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./target/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.3.0"
  }
}
